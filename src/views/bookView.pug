extends layout

block content
  header.navbar.navbar-bright.fixed-top.navbar-expand-md(role='banner')
    .container
      .navbar-header
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='.navbar-collapse')
        span.sr-only Toggle navigation
      a.navbar-brand(href='/') Home
      nav.collapse.navbar-collapse(role='navigation')
        ul.nav.navbar-nav
          each val in nav
            li.nav-item
              a.nav-link(href= val.link)= val.title
        ul.nav.ml-auto.navbar-nav
          li.dropdown.nav-item
            a.dropdown-toggle.nav-link(href='#' data-toggle='dropdown')
              i.glyphicon.glyphicon-search
          ul.dropdown-menu(style='padding:12px;')
            form.form-inline
              button.btn.btn-secondary.float-right(type='submit')
                i.glyphicon.glyphicon-search
              input.form-control.float-left(type='text' placeholder='Search')
  #masthead
    .container
      .row
        .col-lg-7
          h1= title
            p.lead
        .col-lg-5
          .card.bg-light.card-body.mb-3.well-lg
            .row
              .col-md-12      
    //  /cont 
    .container
      .row
        .col-lg-12
          .top-spacer
  //  /cont 
  .container
    .row
      .col-lg-12
        .panel
          .card-body
            // /stories
            .row
              br
              .col-lg-2.col-md-3.text-center
                a.story-title(href='#')
                  img(alt src= book.details.image_url style='width:100px;height:100px')
              .col-lg-10.col-md-9
                h3= book.title
                .row
                  .col-9
                    h4
                      span.badge.badge-dark= book.author
                    h4
                  .col-3
                br
                p !{book.details.description}
                br
            hr
            // /stories
            a.btn.btn-primary.float-xs-right.btnNext(href='/')
              | More 
              i.glyphicon.glyphicon-chevron-right
      // /col-12
